<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="@color/drawable_gallery_in_stroke_background_gradient_start"
                android:endColor="@color/drawable_gallery_in_stroke_background_gradient_end"
                android:centerColor="@color/drawable_gallery_in_stroke_background_gradient_end"
                android:centerY="0.75"
                android:angle="45"
                />
            <corners android:radius="4dp" />
        </shape>
    </item>


    <item
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp" >
        <shape
            android:shape="rectangle"
            android:useLevel="true">
            <stroke android:width="0.5dp" android:color="@color/drawable_gallery_in_stroke" />
            <corners android:radius="4dp" />
        </shape>
    </item>


    <item
        android:drawable="@drawable/ic_gallery" >
    </item>
</layer-list>